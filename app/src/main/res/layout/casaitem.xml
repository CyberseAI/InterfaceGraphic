<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="500dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="525dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/degarriba">

            <ImageView
                android:id="@+id/Img_casa"
                android:layout_width="372dp"
                android:layout_height="488dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="cursive"
                android:text="Tipo"
                android:textColor="#011a4e"
                app:layout_constraintEnd_toStartOf="@+id/getTxtTipo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:text="Estado"
                android:textColor="#02085e"
                app:layout_constraintEnd_toStartOf="@+id/getTxtEstado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/getTxtTipo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:layout_marginTop="16dp"
                android:fontFamily="cursive"
                android:text=""
                android:textColor="#02085e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/getTxtEstado"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="172dp"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:text=""
                android:textColor="#02085e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/getTxtTipo" />

            <TextView
                android:id="@+id/getTxtPrecio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="cursive"
                android:text=""
                android:textColor="#02085e"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>